run = "cd /home/runner/workspace && mvn spring-boot:run -Dspring-boot.run.profiles=dev"
entrypoint = "src/main/java/com/namhatta/NamhattaApplication.java"

[languages.java]
pattern = "**/*.java"

[nix]
channel = "stable-22_11"

[gitHubImport]
requiredFiles = [".replit", "pom.xml"]

[deployment]
run = ["sh", "-c", "cd /home/runner/workspace && mvn clean package -DskipTests && java -jar target/*.jar"]

[[ports]]
localPort = 8080
externalPort = 80